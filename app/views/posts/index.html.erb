

<div class="container vertical-center">

  <div class="container" style="margin-top: 5vh">
      <br>
          <div class="jumbotron p-3 p-md-5 text-muted rounded bg-light">
              <div class="row">
              <div class="col-md-6 px-0" style="margin: 4vh">

                  <div class="panel-group">
                <% @posts.each do |post| %>
                  <br/>
                <div class="panel panel-success">



                  <div class="panel-heading">

                <h3><%= post.title %></h3>
                  </div>
                  <div class="panel-body">

                  <% input = post.body
                 shorter = input[0,200] %>
                 <p>
                   <%= shorter %>  ...
                   </p>
                   <p class="text-success">
                  Chekout the recipe for delicious <%= post.title %> ! Click the button below.

                  </p>
                  <%= link_to "Show me recipe", post_path(post), :class => 'btn btn-success' %>
                  </div>




                <% end %>

                    </div>
              </div>


              </div>
          </div>
  </div>



  </div>
  </div>
  </div>
